.kivicube {
  display: block;
  width: 100vw;
  height: 100vh;
}

.scan-tip {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}

.scan-tip image {
  display: inline-block;
  width: 25vw;
  height: auto;
  margin-left: 5vw;
  opacity: 0.35;
}

.scan-tip .tip-text {
  width: 100%;
  color: white;
  font-size: 5vw;
  opacity: 0.65;
  text-align: center;
}
