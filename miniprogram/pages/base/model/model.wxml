<kivicube-scene
  class="kivicube"
  scene-id="XOTxEGb44JTJnh7pcTQC3HB0qsC2ggEi"
  hideTakePhoto="{{true}}"
  bindready="ready"
  bindsceneStart="sceneStart"
/>

<view wx:if="{{showOperate}}" class="operate operate2">
  <button class="playback" bind:tap="openLookCamera">开启面相相机</button>
  <button class="playback" bind:tap="closeLookCamera">取消面相相机</button>
</view>

<view wx:if="{{showOperate}}" class="operate">
  <button class="play" bind:tap="play">播放</button>
  <button class="pause" bind:tap="pause">暂停</button>
  <button class="stop" bind:tap="stop">停止</button>
  <button class="playback" bind:tap="playback">重播</button>
</view>
