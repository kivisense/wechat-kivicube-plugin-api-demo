page {
  height: 100%;
  background-color: #ccc;
}

.btn-group {
  position: absolute;
  z-index: 2;
  bottom: 10vw;
  left: 0;
  display: flex;
  width: 100%;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
}

.btn-group .item {
  display: flex;
  width: 80vw;
  justify-content: center;
  margin-bottom: 4vw;
}

.btn-group .item .label {
  display: flex;
  width: 25vw;
  align-items: center;
  color: #fff;
}

.btn-group button {
  display: inline-block;
  margin: 0 10px;
  font-size: 14px;
}

.time {
  padding: 10px 0;
  color: #fff;
}

.kivicube {
  display: block;
  width: 100%;
  height: 100%;
}
